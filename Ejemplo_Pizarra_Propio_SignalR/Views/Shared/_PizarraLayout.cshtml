<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pizarra con SignalR</title>
    <link rel="stylesheet" href="~/css/pizarra.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted mt-4" style="font-family: sans sans-serif;">
        <div class="container text-center contenedor">
            <h3 class="grupo-title">Grupo 7</h3>
            <div class="diamond">
                <div class="row justify-content-center">
                    <div class="col-12">Iván Del Pino</div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-6">Alejandro Paz</div>
                    <div class="col-6">Fabio Torres</div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-4">Joaquín Mongelos</div>
                    <div class="col-4">Camila Pereyra</div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
